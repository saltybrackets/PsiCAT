@namespace PsiCat.Home

@using PsiCat.SmartDevices
@inject PsiCatClient Client
@inject SmartDevicesPlugin SmartDevices

<div>
    <div class="col-md-12 d-flex">
        <h4>@LightGroupConfig.Key</h4>
        <Light SmartLight="@SmartLightGroup" @ref="@GroupLightElement" />
    </div>
        
    <div>
        <ul>
            @foreach (SmartDevice light in LightGroupConfig.Value)
            {
                <li><Light SmartLight="@GetLight(light)" @ref="@LightElement"/></li>
            }
        </ul>
    </div>
</div>

